@model UserRegisterDto;

<!doctype html>
<html lang="en">
<head>
    <titsrc()n 10</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/css/Registro.css">

</head>
<body class="img js-fullheight" style="background-image: url(/img/h.jpg);">
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">Nuevo Usuario</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap p-0">

                        <form asp-action="RegisterPost" class="signin-form">
                            <div class="form-group">
                                <input asp-for="Firstname" type="text" class="form-control" placeholder="Nombre" required>
                            </div>
                            <div class="form-group">
                                <input asp-for="Lastname" type="text" class="form-control" placeholder="Apellido" required>
                            </div>
                            <div class="form-group">
                                <input asp-for="Username" type="text" class="form-control" placeholder="Nombre de Usuario" required>
                            </div>
                            <div class="form-group">
                                <input asp-for="Age" type="text" class="form-control" placeholder="Edad" required>
                            </div>
                            <div class="form-group">
                                <input asp-for="Email" type="text" class="form-control" placeholder="Email" required>
                            </div>
                            <div class="form-group">
                                <input asp-for="Password" id="password-field" type="password" class="form-control" placeholder="Contraseña" required>
                                <span toggle="#password-field" class=""></span>
                            </div>
                            <div class="social d-flex text-center">
                                <button type="submit" asp-controller="Home" asp-action="Index" class="form-control btn btn-primary submit px-3">Cancelar</button>
                                <button type="submit" class="form-control btn btn-primary submit px-3">Registrarse</button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </section>


    <script src="~/js/Registro.js"></script>

</body>
</html>

